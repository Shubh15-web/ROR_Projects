<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="stat-card p-5">
        <div class="text-center mb-4">
          <i class="fas fa-sign-in-alt fa-3x text-primary mb-3"></i>
          <h2 class="fw-bold">Welcome Back</h2>
          <p class="text-muted">Sign in to your parking account</p>
        </div>

        <% if flash[:alert] %>
          <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle me-2"></i><%= flash[:alert] %>
          </div>
        <% end %>

        <%= form_with url: login_path, local: true do |form| %>
          <div class="mb-3">
            <%= form.label :email, class: "form-label fw-bold" %>
            <%= form.email_field :email, class: "form-control form-control-lg", placeholder: "Enter your emailid" %>
          </div>

          <div class="mb-4">
            <%= form.label :password, class: "form-label fw-bold" %>
            <%= form.password_field :password, class: "form-control form-control-lg", placeholder: "Enter your password" %>
          </div>

          <div class="d-grid mb-3">
            <%= form.submit "Sign In", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>

        <div class="text-center">
          <p class="text-muted">Don't have an account?</p>
          <%= link_to "Create Account", register_path, class: "btn btn-outline-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
