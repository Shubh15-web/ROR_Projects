<div class="container-fluid py-4">
  <!-- Page Header -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="stat-card p-4">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h2 class="mb-1"><i class="fas fa-car me-3"></i>Vehicles</h2>
            <p class="text-muted mb-0">Manage registered vehicles in the system</p>
          </div>
          <%= link_to new_vehicle_path, class: "btn btn-primary" do %>
            <i class="fas fa-plus me-2"></i>Register Vehicle
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="row mb-4">
    <div class="col-md-3 mb-3">
      <div class="stat-card p-3 text-center">
        <i class="fas fa-car fa-2x text-primary mb-2"></i>
        <h4 class="mb-1"><%= @vehicles.where(vehicle_type: 'car').count %></h4>
        <p class="text-muted mb-0">Cars</p>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="stat-card p-3 text-center">
        <i class="fas fa-motorcycle fa-2x text-success mb-2"></i>
        <h4 class="mb-1"><%= @vehicles.where(vehicle_type: 'bike').count %></h4>
        <p class="text-muted mb-0">Bikes</p>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="stat-card p-3 text-center">
        <i class="fas fa-bicycle fa-2x text-info mb-2"></i>
        <h4 class="mb-1"><%= @vehicles.where(vehicle_type: 'bicycle').count %></h4>
        <p class="text-muted mb-0">Bicycles</p>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="stat-card p-3 text-center">
        <i class="fas fa-truck fa-2x text-warning mb-2"></i>
        <h4 class="mb-1"><%= @vehicles.where(vehicle_type: 'other').count %></h4>
        <p class="text-muted mb-0">Others</p>
      </div>
    </div>
  </div>

  <!-- Vehicles Grid -->
  <div class="row">
    <% if @vehicles.any? %>
      <% @vehicles.each do |vehicle| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="stat-card p-4 h-100">
            <div class="text-center mb-3">
              <% case vehicle.vehicle_type %>
              <% when 'car' %>
                <i class="fas fa-car fa-3x text-primary"></i>
              <% when 'bike' %>
                <i class="fas fa-motorcycle fa-3x text-success"></i>
              <% when 'bicycle' %>
                <i class="fas fa-bicycle fa-3x text-info"></i>
              <% when 'other' %>
                <i class="fas fa-truck fa-3x text-warning"></i>
              <% end %>
            </div>
            
            <div class="text-center mb-3">
              <h5 class="fw-bold mb-1"><%= vehicle.license_plate %></h5>
              <p class="text-muted mb-2"><%= vehicle.owner_name %></p>
              <% case vehicle.vehicle_type %>
              <% when 'car' %>
                <span class="badge bg-primary fs-6 px-3 py-2">Car</span>
              <% when 'bike' %>
                <span class="badge bg-success fs-6 px-3 py-2">Bike</span>
              <% when 'bicycle' %>
                <span class="badge bg-info fs-6 px-3 py-2">Bicycle</span>
              <% when 'other' %>
                <span class="badge bg-warning fs-6 px-3 py-2">Other</span>
              <% end %>
            </div>

            <div class="mb-3">
              <div class="d-flex align-items-center mb-2">
                <i class="fas fa-user text-muted me-2"></i>
                <small class="text-muted">Owner: <%= vehicle.user&.name || 'N/A' %></small>
              </div>
              <div class="d-flex align-items-center">
                <i class="fas fa-calendar text-muted me-2"></i>
                <small class="text-muted">Added: <%= vehicle.created_at.strftime('%d %b %Y') %></small>
              </div>
            </div>

            <div class="d-flex gap-2 justify-content-center">
              <%= link_to vehicle_path(vehicle), class: "btn btn-sm btn-outline-primary" do %>
                <i class="fas fa-eye me-1"></i>View
              <% end %>
              <%= link_to edit_vehicle_path(vehicle), class: "btn btn-sm btn-outline-warning" do %>
                <i class="fas fa-edit me-1"></i>Edit
              <% end %>
              <%= link_to vehicle_path(vehicle), method: :delete, 
                  confirm: 'Are you sure?', 
                  class: "btn btn-sm btn-outline-danger" do %>
                <i class="fas fa-trash me-1"></i>Delete
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="col-12">
        <div class="stat-card p-5 text-center">
          <i class="fas fa-car fa-4x text-muted mb-4"></i>
          <h4 class="text-muted mb-3">No Vehicles Registered</h4>
          <p class="text-muted mb-4">Start by registering your first vehicle</p>
          <%= link_to new_vehicle_path, class: "btn btn-primary btn-lg" do %>
            <i class="fas fa-plus me-2"></i>Register First Vehicle
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
